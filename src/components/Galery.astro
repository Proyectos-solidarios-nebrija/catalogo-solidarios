    </a>
    <!-- <a href={test.src}>
      <Image src={test} alt="smth" />
    </a> -->
  </div>
</section>

<style>
  section {
    margin-top: 150px;
  }

  h2 {
    font-size: 8rem;
    font-weight: 400;
    text-align: center;
    margin: 0;
  }

  img {
    object-fit: cover;
    border-radius: 15px;
    height: 100%;
    width: 100%;
  }

  a:nth-child(2n) {
    width: 170px;
    height: 140px;
    grid-column: 7 / span 2;
  }

  a:nth-child(4n) {
    width: auto;
    height: 140px;
    grid-column: 7 / 11;
  }

  a:nth-child(2n + 1) {
    width: 170px;
    height: 140px;
    grid-column: 9 / span 2;
  }

  a:nth-child(1),
  a:nth-child(4n + 1) {
    height: 300px;
    width: auto;
    grid-column: span 6;
  }

  a:nth-last-child(1):nth-child(odd) {
    width: auto;
    height: 300px;
    grid-column: 1 / 11;
  }

  #photos {
    gap: 20px;
    margin-top: 100px;
    display: grid;
    grid-template-columns: repeat(10, 1fr);
    grid-template-rows: repeat(4, 140px);
  }
</style>

<script>
  import PhotoSwipeLightbox from 'photoswipe/lightbox'

  const lightbox = new PhotoSwipeLightbox({
    gallery: '#photos',
    children: 'a',
    pswpModule: () => import('photoswipe')
  })
  lightbox.init()
</script>
