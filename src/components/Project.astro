---
import { Image } from 'astro:assets'
import { getLangFromUrl, useTranslations } from 'src/i18n/utils'

const { yearStart, yearEnd, title, isLastProject, imgPath } = Astro.props

const fullImgPath = `/src/images/projects/${imgPath}`
const images = import.meta.glob<{ default: ImageMetadata }>(
  '/src/images/projects/**/*.{png,jpg,jpeg}'
)
const image = images[fullImgPath]

const currentLang = getLangFromUrl(Astro.url)
const t = useTranslations(currentLang)

if (!image) {
  throw new Error(
    `"${fullImgPath}" does not exist in glob "/src/images/projects/**/*.{png,jpg,jpeg}"`
  )
}
---

<li>
  <div class="year-container">
    <span
      >{yearStart} - <span class="year-end"
        >{isLastProject ? t('timeline.present') : yearEnd}</span
      ></span
    >
    <div class="circle"></div>
  </div>
  <div class="proyect-container">
    <h3>{title}</h3>
    <Image src={image()} alt={`${t('alt.projectImg')} ${title}`} />
  </div>
</li>

<style>
  li {
    position: relative;
    list-style: none;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 20px;
    padding-bottom: 150px;
  }

  .year-end {
    text-transform: lowercase;
  }

  .circle {
    height: 50px;
    width: 50px;
    background-color: var(--secondary-color);
    border-radius: 100%;
  }

  .year-container {
    display: flex;
    align-items: center;
    gap: 20px;
    height: 100%;
    position: absolute;
    left: 0;
  }

  .year-container::before {
    content: '';
    height: 100%;
    border-left: 2px solid black;
    box-sizing: content-box;
    border-color: var(--secondary-color);
    right: 24px;
    position: absolute;
  }

  .year-container > span {
    font-size: 3rem;
    font-style: italic;
    opacity: 0.7;
  }

  h3 {
    font-weight: 400;
    font-size: 5rem;
    margin: 0;
    text-align: center;
  }

  .proyect-container {
    display: flex;
    flex-direction: column;
    gap: 25px;
  }

  img {
    object-fit: cover;
    height: 300px;
    border-radius: 15px;
    width: 500px;
    box-shadow: rgba(149, 157, 165, 0.2) 0px 8px 24px;
  }

  @media (width <= 1200px) {
    li {
      flex-direction: column;
      align-items: center;
      gap: 50px;
      padding: 0;
    }

    .circle {
      display: none;
    }

    .year-container {
      display: block;
      position: relative;
    }

    .year-container > span {
      font-size: 5rem;
    }

    .year-container::before {
      content: none;
    }
  }
</style>
