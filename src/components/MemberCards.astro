---
import { getEnv } from 'src/helpers/getEnv'
import MemberCard from '@components/MemberCard.astro'
import Link from '@components/icons/Link.astro'
const { projectName, members } = Astro.props
const { CMS_URL } = getEnv()
---

<div class="container">
  <div class="container-projectName">
    <h2 id={projectName}>{projectName}</h2>
    <a href={`#${projectName}`}>
      <Link />
    </a>
  </div>
  <ul class="container-members">
    {
      members.map(({ member }) => (
        <MemberCard
          name={member.name}
          img={{ url: CMS_URL + member.photo.url }}
          links={{ github: member.github_link, linkedin: member.linkedin_link }}
        />
      ))
    }
  </ul>
</div>

<style>
  .container {
    display: flex;
    flex-direction: column;
    gap: 100px;
  }

  h2 {
    margin: 0;
    font-size: 8rem;
    display: flex;
    align-items: center;
    font-weight: 400;
  }

  .container-projectName {
    display: flex;
    align-items: center;
    gap: 50px;
    padding-bottom: 10px;
    border-bottom: 1px solid var(--secondary-color);
  }

  .container-projectName a:hover :global(svg) {
    transform: scale(1.1);
  }

  .container-projectName a:active :global(svg) {
    transform: scale(0.9);
  }

  .container-projectName :global(svg) {
    width: 6rem;
    height: 6rem;
    opacity: 0;
    transition:
      opacity 0.1s ease-in,
      transform 0.1s ease-in-out;
  }

  .container-projectName:hover :global(svg) {
    opacity: 1;
  }

  .container-members {
    margin: 0;
    list-style: none;
    padding: 0;
    display: grid;
    gap: 45px;
    grid-template-columns: repeat(6, 1fr);
    align-items: start;
    justify-content: center;
  }

  .container-members :global(li) {
    grid-column: span 2;
  }

  @media (width <= 1200px) {
    .container-members {
      display: flex;
      flex-wrap: wrap;
    }

    :global(.card) {
      width: 250px;
    }

    .container-projectName {
      gap: 25px;
    }

    .container {
      gap: 50px;
    }
  }
</style>
