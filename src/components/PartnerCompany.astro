---
import { Image } from 'astro:assets'

interface Props {
  name: string
  img: {
    url: string
    width: number
    height: number
    alt: string
  }
}

const { name, img } = Astro.props
---

<li>
  <Image src={img.url} width={img.width} height={img.height} alt={img.alt} />
  <h3>{name}</h3>
</li>

<style>
  h3 {
    text-wrap: pretty;
    font-size: 6rem;
    margin: 0;
    max-width: 10ch;
  }

  img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    margin: 0;
  }

  li {
    width: 280px;
    display: flex;
    gap: 25px;
    align-items: center;
    flex-direction: column;
  }

  @media (width <= 800px) {
    li {
      width: 100%;
    }
  }
</style>
