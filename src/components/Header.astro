---
import ChevronDown from '@components/icons/ChevronDown.astro'
import LogoNebrijaFp from '../images/assets/logoNebrijafp.png'
import { courses } from '@constants/courses'
import { useTranslations, getLangFromUrl } from 'src/i18n/utils'
import { Image } from 'astro:assets'

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
---

<header>
  <h1>{t('title')}</h1>
  <div class="header-content">
    <p>{t('description')}</p>
    <Image
      id="nebrijaFpLogo"
      src={LogoNebrijaFp}
      alt={t('alt.nebrijaLogoImg')}
      width={250}
    />
    <span>
      {
        courses.map((course, idx) => (
          <>
            <strong>{course}</strong>
            {idx < courses.length - 1 && <span> | </span>}
          </>
        ))
      }
    </span>
    <div class="header-content-scroll">
      <span>{t('header.scroll')}</span>
      <ChevronDown />
    </div>
  </div>
</header>

<style>
  header {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 25px;
  }

  h1 {
    font-size: 12rem;
    font-weight: 400;
    text-align: center;
    max-width: 10ch;
    margin: 0;
    text-transform: capitalize;
  }

  .header-content {
    display: flex;
    flex-direction: column;
    text-align: center;
    align-items: center;
    gap: 25px;
  }

  p {
    margin: 0;
    font-size: 3rem;
    max-width: 600px;
    text-wrap: pretty;
    width: 90%;
    text-align: center;
  }

  span {
    font-size: 3rem;
  }

  strong {
    text-transform: uppercase;
    font-weight: 600;
  }

  #nebrijaFpLogo {
    width: 90%;
    height: auto;
    max-width: 250px;
  }

  html[class='dark'] #nebrijaFpLogo {
    filter: invert(0.5) brightness(2);
  }

  .header-content-scroll {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 15px;
  }

  .header-content-scroll :global(svg) {
    width: 8rem;
    height: 8rem;
    animation: fall infinite 2s;
  }

  @media (width <= 800px) {
    p {
      max-width: 400px;
    }

    .header-content {
      gap: 15px;
    }
  }

  @keyframes fall {
    0% {
      transform: translateY(0px);
      opacity: 1;
    }

    100% {
      transform: translateY(20px);
      opacity: 0;
    }
  }
</style>
