---
import { Image } from 'astro:assets'
import { SOCIAL_ICONS_NAMES } from '../constants/icons'
import Github from './icons/Github.astro'
import LinkedIn from './icons/Linkedin.astro'

interface Props {
  name: string
  img: {
    url: string
    alt: string
  }
  links: {
    github?: string
    linkedin?: string
  }
}
const { name, img, links } = Astro.props
---

<li class="card">
  <div class="card-img">
    <Image src={img.url} alt={img.alt ?? ''} width={280} height={300} />
  </div>
  <h3>{name}</h3>
  {
    Object.keys(links)
      .map((key) => links[key])
      .filter((el) => el).length > 0 && (
      <ul class="card-links">
        {Object.keys(links)
          .sort()
          .reduce((acc, linkName) => {
            if (links[linkName]) {
              acc.push(
                <li>
                  <a href={links[linkName]} target="_blank">
                    {SOCIAL_ICONS_NAMES.github === linkName && <Github />}
                    {SOCIAL_ICONS_NAMES.linkedin === linkName && <LinkedIn />}
                  </a>
                </li>
              )
            }
            return acc
          }, [])}
      </ul>
    )
  }
</li>

<style>
  h3 {
    font-weight: 400;
    font-size: 24px;
    margin: 0;
    text-wrap: pretty;
  }

  .card-links :global(svg) {
    width: 40px;
    height: 40px;
    transition: transform 0.1s ease-in-out;
  }

  a {
    text-decoration: none;
  }

  a:hover :global(svg) {
    transform: scale(1.1);
  }

  a:active :global(svg) {
    transform: scale(0.9);
  }

  .card {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20px;
    align-self: stretch;
    justify-content: space-between;
  }

  .card:not(:has(:nth-child(3))) {
    justify-content: normal;
  }

  .card-img img {
    object-fit: cover;
    width: 100%;
    height: 300px;
    aspect-ratio: 5/6;
    transition: transform 0.2s ease-in-out;
  }

  .card-img img:hover {
    transform: scale(1.1);
  }

  .card-img {
    border-radius: 15px;
    position: relative;
    overflow: hidden;
    width: 100%;
  }

  .card-links {
    gap: 20px;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: row;
    list-style: none;
  }
</style>
