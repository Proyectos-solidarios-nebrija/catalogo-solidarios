---
import type { ImageMetadata } from 'astro'
import { Image } from 'astro:assets'
import { SOCIAL_ICONS_NAMES } from '../constants/icons'
import Github from './icons/Github.astro'
import LinkedIn from './icons/Linkedin.astro'
import { getLangFromUrl, useTranslations } from 'src/i18n/utils'
const { name, imgPath, links, isManager } = Astro.props

const currentLang = getLangFromUrl(Astro.url)
const t = useTranslations(currentLang)

const fullImgPath = `/src/images/members/${imgPath}`
const images = import.meta.glob<{ default: ImageMetadata }>(
  '/src/images/members/**/*.{png,jpg,jpeg}'
)
const image = images[fullImgPath]

if (!image) {
  throw new Error(
    `"${fullImgPath}" does not exist in glob "/src/images/members/**/*.{png,jpg,jpeg}"`
  )
}
---

<li class="card">
  <div class="card-img">
    <Image
      src={image()}
      alt={`${t('alt.memberImg')} ${name}`}
      width={280}
      height={300}
    />
    {isManager && <span>Encargado</span>}
  </div>
  <h3>{name}</h3>
  <ul class="card-links">
    {
      Object.keys(links)
        .sort()
        .map((linkName) => (
          <li>
            <a href={links[linkName]} target="_blank">
              {SOCIAL_ICONS_NAMES.github === linkName && <Github />}
              {SOCIAL_ICONS_NAMES.linkedin === linkName && <LinkedIn />}
            </a>
          </li>
        ))
    }
  </ul>
</li>

<style>
  h3 {
    font-weight: 400;
    font-size: 24px;
    margin: 0;
    text-wrap: pretty;
  }

  .card-links :global(svg) {
    width: 40px;
    height: 40px;
    transition: transform 0.1s ease-in-out;
  }

  a {
    text-decoration: none;
  }

  a:hover :global(svg) {
    transform: scale(1.1);
  }

  a:active :global(svg) {
    transform: scale(0.9);
  }

  .card {
    justify-content: space-between;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20px;
    align-self: stretch;
  }

  .card:has(:not(:nth-child(3))) {
    justify-content: normal;
  }

  .card-img img {
    object-fit: cover;
    width: 100%;
    height: 300px;
    aspect-ratio: 5/6;
    transition: transform 0.2s ease-in-out;
  }

  .card-img img:hover {
    transform: scale(1.1);
  }

  .card-img {
    border-radius: 15px;
    position: relative;
    overflow: hidden;
    width: 100%;
  }

  .card-img span {
    position: absolute;
    font-size: 2rem;
    padding: 10px 30px;
    background-color: var(--primary-color);
    border-radius: 10px;
    box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px;
    bottom: -10px;
    right: -10px;
  }

  .card-links {
    gap: 20px;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: row;
    list-style: none;
  }
</style>
