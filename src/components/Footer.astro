---
import logoSolidarios from '../images/assets/logoSolidarios.webp'
import { Image } from 'astro:assets'
import { getLangFromUrl, useTranslations } from 'src/i18n/utils'

const currentLang = getLangFromUrl(Astro.url)
const t = useTranslations(currentLang)
---

<footer>
  <img
    src="/images/logoNebrija.png"
    alt={t('alt.nebrijaLogoImg')}
    id="imgNebrija"
  />
  <div class="vertical-line"></div>
  <Image
    src={logoSolidarios}
    alt={t('alt.solidariosLogoImg')}
    id="imgSolidarios"
  />
</footer>

<style>
  footer {
    padding: 10px 0;
    margin-top: 100px;
    display: flex;
    gap: 10px;
    align-items: center;
    justify-content: center;
    background-color: #00000005;
  }

  html[class='dark'] footer {
    background-color: #00000026;
  }

  .vertical-line {
    padding: 35px 0;
    margin: 0 20px;
    width: 1px;
    background-color: var(--secondary-color);
  }

  #imgNebrija {
    height: 45px;
    width: auto;
  }

  html[class='dark'] #imgNebrija {
    filter: invert(0.5) brightness(2);
  }

  #imgSolidarios {
    height: 65px;
    width: 65px;
    border-radius: 15px;
  }

  @media (width <= 800px) {
    .vertical-line {
      padding: 35px 0;
      margin: 0 10px;
    }
  }
</style>
